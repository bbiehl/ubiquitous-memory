<h1>StaticPages#home</h1>
<p>Find me in app/views/static_pages/home.html.erb</p>

<% @beers = Beer.all %>
<% @beers.each do |beer| %>
  <h3><%= beer.name %> | <%= beer.style %></h3>
  <h4>ABV: <%= beer.abv %> | IBU: <%= beer.ibu %></h4>
  <h4><%= beer.description %></h4>
  <p><%= image_tag beer.image.variant(resize: "100x50") %></p>
<% end %>